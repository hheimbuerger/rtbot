<% if @flash[:note] -%>
<div id="notice"><%= @flash[:note] %></div>
<% end -%>

<table border="1">
  <thead>
    <th>state</th>
    <th>date</th>
    <th>exception class</th>
    <th>source</th>
    <th>error message</th>
  </thead>
  <% for logged_exception in @logged_exceptions %>
    <tr>
      <td>
        <% if logged_exception.user.nil? %>
            open
        <% else %>
            fixed
        <% end %>
      <td style="white-space:nowrap;"><%= link_to logged_exception.timestamp.utc, :action => 'view', :id => logged_exception.id %></td>
      <td><%= logged_exception.exception_type %></td>
      <td><%= logged_exception.meta_message %></td>
      <td><%= logged_exception.message %></td>
      <!--      <td><%= simple_format(logged_exception.traceback) %></td>-->
    </tr>
  <% end %>
</table>